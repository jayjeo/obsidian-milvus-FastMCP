# 🔧 Obsidian-Milvus-FastMCP Environment Configuration Example
# Copy this file to .env and modify according to your personal settings

# 🗂️ Obsidian Vault Path (REQUIRED)
# Windows example: OBSIDIAN_VAULT_PATH=C:\Users\YourName\Documents\ObsidianVault
# Linux/Mac example: OBSIDIAN_VAULT_PATH=/home/username/ObsidianVault
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# 📁 External Storage Path (Optional, default: volumes folder in project)
# EXTERNAL_STORAGE_PATH=/path/to/storage

# 🔧 Podman Path (Optional, auto-detection first)
# Windows example: PODMAN_PATH=C:\Program Files\RedHat\Podman\podman.exe
# Linux/Mac usually auto-detected
# PODMAN_PATH=/usr/bin/podman

# 🎛️ Server Settings
MILVUS_HOST=localhost
MILVUS_PORT=19530
FLASK_PORT=5678
FASTMCP_PORT=5680

# 🧠 AI Model Settings
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
VECTOR_DIM=768
CLAUDE_MODEL=claude-3-opus-20240229

# ⚡ Performance Settings
USE_GPU=true
GPU_DEVICE_ID=0
BATCH_SIZE=2000
EMBEDDING_BATCH_SIZE=2000

# 📊 Logging
LOG_LEVEL=ERROR

# 🔐 Authentication Settings (Optional)
ENABLE_AUTH=false
# USERNAME=admin
# PASSWORD=your_password

# 🚀 Advanced Settings (recommended to keep defaults)
ADVANCED_SEARCH_ENABLED=true
KNOWLEDGE_GRAPH_ENABLED=true
MULTI_QUERY_FUSION_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
